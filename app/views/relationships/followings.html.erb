<h1>Follower Users</h1>
<% if @users.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followings.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td>
            <%= link_to user_path(user.id) do %>
              Show
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</table>
