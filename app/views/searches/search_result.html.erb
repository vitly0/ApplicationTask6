<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <% if @users.exists? %>
      <thead>
        <h1>Users search for "<%= @word %>"</h1>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
            <td><%= link_to user.name,user_path(user.id) %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <p>条件に合ったユーザーはいませんでした。</p>
    <% end %>
  <% else %>
    <% if @books.exists? %>
    <thead>
      <h1>Books search for "<%= @word %>"</h1>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th colspan="3">Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
    <% else %>
      <p>条件に合った本はありませんでした。</p>
    <% end %>
  <% end %>
</table> 